<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Entry Form</title>
    <script src="/socket.io/socket.io.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.2/dist/normalizr.browser.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"
      integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>

  <body>
    <div class="container mt-3">
      <h1 class="alert alert-success">
        Welcome, <%= userName %>
        <button
          class="btn btn-warning float-right mt-2"
          onclick="location.href='/logout'"
        >
          Log _Out
        </button>
      </h1>
    </div>
    <div class="container mt-3">
      <div class="jumbotron">
        <h1>Enter Product</h1>
        <br />

        <form id="formSaveProduct">
          <div class="form-group">
            <label for="title">Name</label>
            <input
              id="title"
              class="form-control"
              type="text"
              name="title"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input
              id="price"
              class="form-control"
              type="number"
              step="0.01"
              name="price"
              required
            />
          </div>
          <div class="form-group">
            <label for="thumbnail">Photo URL</label>
            <input
              id="thumbnail"
              class="form-control"
              type="url"
              name="thumbnail"
            />
          </div>
          <button class="btn btn-success mt-3">Send</button>
        </form>
        <br />
        <div id="products"></div>
      </div>
      <div class="jumbotron">
        <h1>
          Message Box
        </h1>
        <br />
        <input
          type="text"
          id="inputUsername"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter email"
        />
        <input
          type="text"
          id="firstname"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter firstname"
        />
        <input
          type="text"
          id="lastname"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter lastname"
        />
        <input
          type="text"
          id="age"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter age"
        />
        <input
          type="text"
          id="alias"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter alias"
        />
        <input
          type="text"
          id="avatar"
          class="form-control w-50 my-2 mr-2"
          placeholder="Enter avatar (url)"
        />
        <hr />

        <hr />

        <div id="messages"></div>

        <form id="formPostMessage" class="form-inline" autocomplete="off">
          <div class="form-group">
            <input
              disabled
              id="inputMessage"
              type="text"
              class="form-control my-2 mr-2"
              placeholder="Enter message..."
            />
            <button
              disabled
              id="btnSend"
              type="submit"
              class="btn btn-primary my-2"
            >
              Enviar
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="js/main.js"></script>
  </body>
</html>