<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if products.length}}
<h2>Products list</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}